    "noUnusedParameters": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
